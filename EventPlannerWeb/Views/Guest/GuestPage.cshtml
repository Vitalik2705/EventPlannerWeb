@model EventPlannerWeb.Models.Guest

@{
    ViewData["Title"] = "Guest Details";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding-top: 150px; /* Відступ зверху, щоб уникнути накладання хедера на контент */
        background-color: #f5f5f5;
        color: #333;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 5px; /* Закруглені кути */
        background: #fff;
        padding: 20px;
        margin: 20px auto; /* Центрування картки */
        width: 80%; /* Ширина картки */
        max-width: 600px; /* Максимальна ширина */
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    .card-container {
        padding: 2px 16px;
    }

    .card-title {
        color: #333;
        margin-bottom: 15px;
    }

    .detail-label {
        font-weight: bold;
    }

    .detail-value {
        margin-bottom: 10px;
    }

    a.back-link {
        display: inline-block;
        margin-top: 20px;
        font-size: 16px;
        text-decoration: none;
        padding: 10px 20px;
        color: #fff;
        background-color: #007bff;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    a.back-link:hover {
        background-color: #0056b3;
    }
</style>

<div class="card">
    <div class="card-container">
        <h2 class="card-title">Деталі гостя</h2>

        <div class="detail">
            <div class="detail-label">Ім'я</div>
            <div class="detail-value">@Model.Name</div>
        </div>

        <div class="detail">
            <div class="detail-label">Прізвище</div>
            <div class="detail-value">@Model.Surname</div>
        </div>
        
        <!-- Додайте більше деталей за потребою -->

        <a href="@Url.Action("GuestList", "Guest")" class="back-link">Назад до списку</a>
    </div>
</div>
