<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" />
    <title>@ViewData["Title"] - EventPlannerWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventPlannerWeb.styles.css" asp-append-version="true" />
</head>
<body>
     <style>
        .header {
            position: fixed; 
            top: 0; 
            width: 1600px;
            background-color: #8B92D0; 
            z-index: 1000; 
            height: 100px;
            margin-right: 20px;
            display:flex;
            justify-content: space-between;
        }

        .left-part {
            display: flex;
            flex-direction: row;
            margin-left: 100px;
            gap: 10px;
        }

        .left-part-text {
            color:white;
            font-size: 25px;
            margin-top: 30px;
        }

        .left-part-img {
            width: 40px;
            height: 50px;
            margin-top: 20px;
        }
        
        .right-part {
            display: flex;
            flex-direction: row-reverse;
            margin-right: 150px;
        }

        .button-add-recipe {
            width: 120px;
            height: 45px;
            background-color: white;
            font-size: 17px;
            color: #8B92D0;
            border-radius: 10px;
            margin-top: 25px;
            cursor: pointer;
        }

        .link-about-us {
            margin-left: 20px;
            font-size: 20px;
            margin-top: 35px;
        }

        .link-style:hover {
            color: #f0f0f0; /* Колір тексту при наведенні */
        }


        .link-style {
            text-decoration: none;
            font-size: 20px;
            margin-top: 35px;
            color: #ffffff; 
            transition: color 0.3s ease; /* Плавне змінення кольору при наведенні */
        }

        .title-event-planner {
            position: absolute;
            top: 13px;
            left: 65px;
            font-size: 25px;
        }

    </style>
    @if (ViewBag.ShowHeader != false)
    {
        <div class="header">
            <div class="left-part">
                <img class="left-part-img" src="C:\Users\Vitalik\Downloads\planner.png" />
                <div class="left-part-text">EventPlanner</div>
            </div>
            <div class="right-part">
                <div class="link-about-us">
                    <a href="/api/recipe" class="link-style">Рецепти</a>
                </div>
                <div class="link-about-us">
                    <a href="/api/guest" class="link-style">Гості</a>
                </div>
                <div class="link-about-us">
                    <a href="/api/event" class="link-style">Події</a>
                </div>
                <div class="link-about-us">
                    <a href="YourPage.cshtml" class="link-style">Налаштування</a>
                </div>

                    <button onclick="window.location.href='user/login'" class="button-add-recipe">Логін</button>
                
            </div>
        </div>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
